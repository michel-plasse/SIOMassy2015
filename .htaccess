# Send all responses in utf-8
AddDefaultCharset UTF-8
# Allow directory browsing
Options +Indexes

<IfModule mod_rewrite.c>
  #Use url rewriting
  RewriteEngine on

  RewriteBase /gestionmassy/
  # Ignorer la reecriture pour index.php, css, js, images,
  # robots.txt (pour l'indexation par les robots), favicon.ico
  # (icône symbolisant le site), et la racine du site
  RewriteCond $1 !^(index\.php|items|css|js|images|robots\.txt|favicon\.ico|$)
  # Reecrire les url en les préfixant de index.php/
  RewriteRule ^(.*)$ index.php/$1 [L]

</IfModule>
